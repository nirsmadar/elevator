{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "lib": [
            "es2017",
            "dom"
        ],
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "skipLibCheck": false
    },
    "files": [
        "./src/index.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "filesGlob": [
        "./src/**/*.tsx"
    ]
}